{
  "manifest_version": 3,
  "name": "Amazon Smart Recommendations",
  "version": "3.0.0",
  "description": "Get smart product recommendations while shopping on Amazon",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "*://*.amazon.com/*",
    "https://amazon-smart-recommendations-nxqwcy3cb-marcin8501s-projects.vercel.app/*",
    "https://cors-anywhere.herokuapp.com/*",
    "https://api.allorigins.win/*",
    "https://cors-proxy.htmldriven.com/*",
    "https://corsproxy.io/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.amazon.com/*"],
      "js": ["contentScript.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["amazonPanel.js", "api-test.html"],
      "matches": ["*://*.amazon.com/*"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 