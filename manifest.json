{
  "manifest_version": 3,
  "name": "Amazon Smart Recommendations",
  "version": "2.0",
  "description": "Get AI-powered product recommendations while shopping on Amazon",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.amazon.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.amazon.com/*/dp/*",
        "https://www.amazon.com/dp/*",
        "https://www.amazon.com/gp/product/*"
      ],
      "exclude_matches": [
        "*://merch.amazon.com/*",
        "*://sellercentral.amazon.com/*",
        "*://advertising.amazon.com/*",
        "*://kdp.amazon.com/*",
        "*://*.amazon.com/gp/help/*",
        "*://*.amazon.com/ap/signin*",
        "*://*.amazon.com/your-account*"
      ],
      "js": ["contentScript.js"],
      "css": ["sidePanel.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["amazonPanel.js"],
      "matches": ["https://www.amazon.com/*"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
} 